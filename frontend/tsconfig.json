{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": []
  },
  "include": [
    "./src/**/*",
    "./intellisense.d.ts",
    "./src/globals.d.ts",
    "./src/**/*.vue",
    "./src/icons.d.ts"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
